<odoo>
    <data>

<!-- START of Action ==================================================================================================================== -->

        <record id="amenities_m_action" model="ir.actions.act_window">
            <field name="name">Amenities</field>
            <field name="res_model">hotel_management.amenities_m</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Amenities
                </p>
            </field>
        </record>

<!-- END of Action ==================================================================================================================== -->

<!-- START Tree View ==================================================================================================================== -->

        <record id="amenities_m_tree" model="ir.ui.view">
            <field name="name">Amenities</field>
            <field name="model">hotel_management.amenities_m</field>
            <field name="arch" type="xml">
                <tree string="Amenities">
                    <field name="name" />
                    <field name="price" />
                </tree>
            </field>
        </record>

<!-- END of Tree View ==================================================================================================================== -->

<!-- START Form View ==================================================================================================================== -->

        <record id="amenities_m_form" model="ir.ui.view">
            <field name="name">Amenities</field>
            <field name="model">hotel_management.amenities_m</field>
            <field name="arch" type="xml">
                <form string="Amenities">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="price" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!-- END Form View ==================================================================================================================== -->

    </data>
</odoo>