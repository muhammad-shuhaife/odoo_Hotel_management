<odoo>
    <data>

<!-- START of Action ==================================================================================================================== -->

        <record id="services_action" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">hotel_management.services</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Services
                </p>
            </field>
        </record>

<!-- END of Action ==================================================================================================================== -->
  
<!-- START Tree View ==================================================================================================================== -->

        <record id="services_tree" model="ir.ui.view">
            <field name="name">services</field>
            <field name="model">hotel_management.services</field>
            <field name="arch" type="xml">
                <tree string="Services">
                    <field name="name" />
                    <field name="extra_cost" />
                </tree>
            </field>
        </record>

<!-- END of Tree View ==================================================================================================================== -->

<!-- START Form View ==================================================================================================================== -->

        <record id="services_form" model="ir.ui.view">
            <field name="name">Services</field>
            <field name="model">hotel_management.services</field>
            <field name="arch" type="xml">
                <form string="Services">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="extra_cost" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!-- END Form View ==================================================================================================================== -->

    </data>
</odoo>